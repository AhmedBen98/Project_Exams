pipeline {
    agent any
    environment {
        // Hardcoded credentials (NOT RECOMMENDED)
        NEXUS_URL = 'http://localhost:8081'
        NEXUS_REPO = 'docker-releases'
        NEXUS_USER = 'admin'              // Hardcoded username
        NEXUS_PASS = 'Admin@2025'        // Hardcoded password
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/AhmedBen98/Project_Exams'
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend-exams') {
                    script {
                        dockerImageBackend = docker.build("backend-exams:latest")
                    }
                }
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontproj') {
                    script {
                        dockerImageFrontend = docker.build("frontproj:latest")
                    }
                }
            }
        }
        stage('Push to Nexus') {
            steps {
                script {
                    // Using hardcoded credentials in registry URL
                    docker.withRegistry("${NEXUS_URL}/repository/${NEXUS_REPO}", "${NEXUS_USER}:${NEXUS_PASS}") {
                        dockerImageBackend.push()
                        dockerImageFrontend.push()
                    }
                }
            }
        }
    }
}
