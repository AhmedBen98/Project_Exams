pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        NEXUS_URL = 'http://localhost:8081'
        NEXUS_REPO = 'docker-releases'
        NEXUS_CREDENTIALS = 'nexus-creds'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/AhmedBen98/Project_Exams'
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend-exams') {
                    script {
                        dockerImage = docker.build("backend-exams:${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontproj') {
                    script {
                        dockerImage = docker.build("frontproj:${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Push to Nexus') {
            steps {
                script {
                    docker.withRegistry("${NEXUS_URL}/repository/${NEXUS_REPO}", NEXUS_CREDENTIALS) {
                        docker.image("backend-exams:${env.BUILD_NUMBER}").push()
                        docker.image("frontproj:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }
    }
}
