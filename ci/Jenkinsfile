pipeline {
    agent any

    environment {
        NEXUS_URL = 'http://172.20.10.2:8081'
        NEXUS_REPO = 'docker-releases'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/AhmedBen98/Project_Exams'
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend-exams') {
                    script {
                        dockerImage = docker.build("backend-exams:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontproj') {
                    script {
                        dockerImage = docker.build("frontproj:${env.BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Push to Nexus') {
            steps {
                script {
                    docker.withRegistry("${NEXUS_URL}/repository/${NEXUS_REPO}", [username: 'admin', password: 'Admin@2025']) {
                        docker.image("backend-exams:${env.BUILD_NUMBER}").push()
                        docker.image("frontproj:${env.BUILD_NUMBER}").push()
                    }
                }
            }
        }
    }
}
